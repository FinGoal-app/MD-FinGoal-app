<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color -->
    <solid android:color="#FFFFFF" />  <!-- White background color -->

    <!-- Rounded corners -->
    <corners android:radius="8dp" />  <!-- Radius for rounded corners -->

    <!-- Border for the input field -->
    <stroke
        android:color="#D3D3D3"
         android:width="1dp" />

    <!-- Padding inside the input field -->
    <padding
        android:left="16dp"
        android:top="12dp"
        android:right="16dp"
        android:bottom="12dp" />  <!-- Inside padding for text spacing -->
</shape>

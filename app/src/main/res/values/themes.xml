<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FinGoal" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_500</item>
        <item name="colorPrimaryVariant">@color/green_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Widget.App.Button.GoogleButtonStyle" parent="Widget.Material3.Button">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Button.GoogleButtonStyle</item>
        <item name="strokeColor">@color/google_btn_stroke_day</item>
        <item name="strokeWidth">2dp</item>
    </style>

    <style name="ThemeOverlay.App.Button.GoogleButtonStyle" parent="ThemeOverlay.Material3.Button">
        <item name="colorContainer">@color/white</item>
        <item name="colorOnContainer">@color/google_btn_font_day</item>
    </style>
</resources>